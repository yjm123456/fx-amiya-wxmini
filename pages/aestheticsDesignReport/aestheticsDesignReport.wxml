<view class="container">
    <view class="header">
        <image mode="widthFix" src="https://ameiya.oss-cn-hangzhou.aliyuncs.com/1081bbc3b07a47a9b58826f1004c8a29.jpg"></image>
        <view class="code">
            <text wx:if="{{status!='add'}}" class="no">编号:{{reportId}}</text>
            <text wx:if="{{status=='design'}}" class="btn" bindtap="ToPageLocation">查看美学设计</text>
        </view>
    </view>
