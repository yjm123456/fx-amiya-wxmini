                            </van-uploader>
                        </view>
                        <view class="img">
                            <van-uploader disabled="{{status=='design'? true:false}}" preview-size="40vw" image-fit="widthFix" accept="image" max-count="1" bind:after-read="afterSidePictureRead" bind:delete="{{status=='design'? '':'deleteSidePicture'}}" file-list="{{ sidePictureList }}">
                                <view class="occupancy"><text>请上传侧面图片</text></view>
                            </van-uploader>
                        </view>

                    </view>
                </view>
            </view>
            <view wx:if="{{status=='add'}}">
                <view class="submit" bindtap="AddReport">提交</view>
            </view>
            <view wx:elif="{{status=='commit'}}">
                <view class="submit" bindtap="updateReport">提交修改</view>
            </view>
