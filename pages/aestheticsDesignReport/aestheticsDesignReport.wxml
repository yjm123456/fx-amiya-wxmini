        <view class="content_form">
            <view>
                <view class="title">基础信息</view>
                <view class="person_block">
                    <view class="person_info">
                        <image src="/images/report/icon-user.png"></image><text class="label">姓名</text>:<input    disabled="{{status=='design'? true:false}}" bindinput="handleNameChange" class="base_info" value="{{name}}" type="text" />
                    </view>
                    <view class="person_info">
                        <image src="/images/report/age.png"></image><text class="label">生日</text>:
                        <picker disabled="{{status=='design'? true:false}}" mode="date" end='{{timeNow}}' bindchange="handleAgeChange">
                            <input  class="base_info" disabled value="{{birthDay}}" type="text" />
                        </picker>
                    </view>
                    <view class="person_info">
                        <image src="/images/report/phone.png"></image>
                        <text class="label">联系方式</text>:<input class="base_info" bindinput="handlePhoneChange" value="{{phone}}" disabled="{{status=='design'? true:false}}" type="text" />
                    </view>
                    <view class="person_info">
                        <image src="/images/report/city.png"></image>
                        <text class="label">城市</text>:
                        <picker disabled="{{status=='design'? true:false}}" mode="region" bindchange="handleCityChange">
                            <input disabled class="base_info" value="{{simpleCity}}" type="text" />
                        </picker>
                    </view>
                </view>
            </view>
