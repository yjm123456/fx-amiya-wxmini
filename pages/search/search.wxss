/* pages/search/search.wxss */
page{
    background-color: #000;
}
.container{
    margin: 30rpx;
    height: 100%;
}
.search_warp{
    display: flex;
    align-items: center;
    justify-content: space-between;
}
.search_input{
    box-sizing: border-box;
    background-color: #262626;
    border-radius: 15rpx;
    width: 90%;
    display: inline-block;
    height: 70rpx;
    line-height: 70rpx;
    padding: 10rpx 20rpx;
}
.search_icon{
    width: 10%;
    color: #DEC350;
    font-weight: 600;
    text-align: center;
    font-size: 50rpx;
}

/* 搜索历史和热门标签 */
.search_history_tags,.hot_tags{
    margin-top: 30rpx;
}
.tag_warp{
    color: #fff;
}
.tag_title{
    display: flex;
    justify-content: space-between;
    font-size: 38rpx;
    align-items: flex-end;
}
.clear{
    font-size: 32rpx;
}
.tags{
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
}

.tag{
    padding: 10rpx 20rpx;
    margin-right: 20rpx;
    margin-top: 10rpx;
    background-color: #262626;
    border-radius: 20rpx;
}
.goods_list{color: #fff;}
.top{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}
.top text{
    margin-right: 20rpx;
}

