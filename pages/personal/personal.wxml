<view class="personal_container">
    <view class="user_section" style="background-image: url(../../images/bc.png);background-size: 100% 100%;">
        <view class="user_info_box">
            <view class="portrait_box" bindtap="tpPersonalInfo">
                <image class="portrait" src='{{userInfo.avatarUrl}}'></image>
            </view>
            <view class="info_box">
                <view class="info_box_top">
                    <text class="username">{{userInfo.nickName ? userInfo.nickName : '游客'}}</text>
                    <!-- <text catchtap="toGrowthList" class="leave">{{memberCard.memberRankName ?memberCard.memberRankName :""}}</text> -->
                </view>
                <!-- <view class="balance">
                    <text catchtap="toRechargeList">我的储值:{{totalBalance}}</text>
                </view> -->
            </view>
            <!-- <view class="member_no"> <canvas type="2d" style="width:128rpx ; height: 128rpx;margin-left: 8rpx;margin-top: 13rpx;" id="myQrcode"></canvas> </view> -->
        </view>
        <!-- <view class="navigation_list">
            <view class="grid_item" data-url="/pages/userProtection/userProtection" bindtap="to"><text>积分规则</text></view>
            <view class="grid_item" data-url="/pages/memberbenefits/memberbenefits" bindtap="to"><text>会员权益</text></view>
        </view> -->
        <view class="account_info">
            <view class="memberbenefit" data-url="/pages/memberbenefits/memberbenefits" bindtap="to">
                <view class="member"><image src="https://ameiya.oss-cn-hangzhou.aliyuncs.com/b53b9d1e4fba4961b177d39aadb3e998.png"></image></view>
                <text>会员权益</text>
            </view>
            <view class="info-item" catchtap="toIntegralPage">
                <view><text>{{balance}}</text></view>
                <view>积分</view>
            </view>
            <view class="info-item" data-url="/pages/ConsumptionVoucher/ConsumptionVoucher" bindtap="to">
                <view><text>{{voucherCount}}</text></view>
                <view>券类卡包</view>
            </view>
            <view class="info-item" catchtap="toRechargeList">
                <view><text>{{totalBalance}}</text></view>
                <view>储值</view>
            </view>
        </view>
        <view class="card" data-url="/pages/businessCard/businessCard" bindtap="to" data-nickname='{{userInfo.nickName}}'>
            <image src="{{memberCard.imageUrl}}" mode="widthFix"></image>
            <view class="card_info">
                <view class="process" style="{{style}}">
                    <view class="vprocess">
                        <van-progress color="#dec530" track-color="rgba(255,255,255,0.3)"  show-pivot="{{false}}" percentage="{{percentage}}" stroke-width="8" />
                    </view>
                    <view>{{growthBalanceInfo.balance}}/{{growthBalanceInfo.balance+growthBalanceInfo.upgradeGrowthPoints}}</view>
                </view>
                <view class="upgrade" style="{{style}}">
                    <view>成长值{{growthBalanceInfo.balance}}</view>
                    <view>距离下一等级还需要{{growthBalanceInfo.upgradeGrowthPoints}}</view>
                </view>
            </view>
        </view>
    </view>
</view>
