page{
    background-color: #000;
}
.van-tabs__scroll{
    background-color: #000 !important;
}
.tabs{
    background-color: #000 !important;
}
.custom_vandivider{
    margin: 0 !important;
}
.content{
    border: #DEC350 2rpx solid;
    background-color: #313131;
    border-radius: 20rpx;
    margin: 20rpx;
    position: relative;
    overflow: hidden;
}
.item{
    height:150rpx;
    display: flex;
}
.item_left{
    width: 20%;
    background-color: #262626;
    text-align: center;
    display: flex;
    flex-direction: column;
    justify-content: center;
}
.item_left>.money{
    color: #DEC350;
    font-size: 32rpx;
    font-weight: 600;
}
.item_left>.type{
    color: #fff;
}
.item_right{
    display: flex;
    flex-direction: column;
    width: 80%;
    padding: 10rpx;
}
.right_top{
    color: #fff;
    display: flex;
    width: 100%;
    justify-content: space-between;
    height: 75%;
    align-items: center;
}
.right_top .descrip{
    display: flex;
    flex-direction: column;
    justify-content: space-around;
}
.right_top .source{
    font-size: 18rpx;
}
.right_bottom{
    height: 25%;
    color: #e2e2e2;
    font-size: 22rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
}
.explanation{
    width: 100% !important;
    height: 100% !important;
}
.share_tag{
    color: #fff;
    position: absolute;
    background-color: #DEC350;
    font-size: 18rpx;
    right: 0;
    top: 0;
    border-bottom-left-radius: 10rpx;
    padding: 5rpx;
}
