page {
  padding-bottom: 100rpx;
  background-color: #f1f1f1;
}

.address {
    background-color: #fff;
    padding: 20rpx 30rpx;
    border-radius: 20rpx;
    margin: 20rpx;
    color: #000;
}

.select_address {
    display: flex;
    align-items: center;
    justify-content: space-between;
    color: #000;
}

.place{
    color: #000 !important;
}
.select_address>view:first-of-type {
    display: flex;
    align-items: center;
}

.select_address>view:first-of-type>text:first-of-type {
    font-size: 60rpx;
    color: #3388FF;
}

.select_address>view:first-of-type>text:last-of-type {
    color: #000;
    padding-left: 10rpx;
}

.select_address>view:last-of-type text {
    font-size: 40rpx;
}

.address_info {
    display: flex;
    align-items: center;
}

.address_info .icon {
    color: #383839;
    font-size: 28rpx;
}

.address_info .text {
    flex: 1;
    padding-left: 20rpx;
    color: #000;
}

.address_info .text>view:first-of-type {
    font-size: 30rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
    font-weight: bold;
}

.address_info .text>view:last-of-type {
    font-size: 28rpx;
    color: #000;
    padding-top: 10rpx;
}
.address_title{
    color: #000 !important;
}
/* 商品信息 */
.goods {

  background-color: #f1f1f1;
}

.goods::before,
.goods::after {
  content: '';
  display: block;
  height: 10rpx;
  background-color: #f1f1f1;
  width: 100%;
}

.goods .title text:first-of-type {
  font-size: 40rpx;
}

.goods .title text:last-of-type {
  padding-left: 10rpx;
}

.goods .item {
  padding: 20rpx 30rpx;
  display: flex;
  background-color: #fff;
  border-radius: 20rpx;
  margin: 20rpx;
}

.goods .item image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 20rpx;
}

.goods .item>view:first-of-type {
  flex: 1;
  padding-left: 10rpx;
  position: relative;
}

.goods .item>view:first-of-type .name {
  font-size: 28rpx;
  font-weight: bold;
  color: #000;
}

.goods .item>view:first-of-type .description {
    margin-top: 10rpx;
  color: #000;
  font-size: 25rpx;
}

.goods .item>view:first-of-type .price {
  width: 100%;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: absolute;
  bottom: 0;
}
.num{
    color: #000;
}
.goods .item>view:first-of-type .price>text:first-of-type {
    color: #8878f5;
    font-weight: 600;
}
.goods .item>view:first-of-type .price>text:last-of-type {
    color: #000;
  }

.remark{
    /* box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.2); */
    background-color: #fff;
    margin: 20rpx;
    border-radius: 20rpx;
    padding: 20rpx;
}
.mark{
    background-color: #f1f1f1;
    border-radius: 20rpx;
    margin-top: 20rpx;
}
.field{
    background-color: #f1f1f1 !important;
    color: #000 !important;
}
.label{
    font-size: 30rpx;
    color: #000;
}
.van-cell{
    background-color: #f1f1f1 !important;
    border-radius: 20rpx !important;
    color: #fff !important;
    margin-top: 20rpx;
}

.voucher-list{
    border-radius: 30rpx;
    padding: 30rpx;
    background-color: #fff;
    margin: 30rpx 30rpx;
}
.overall_voucher{
    
}
.voucher-title{
    font-size: 28rpx;
    margin-bottom: 10rpx;
    color: #000;
}
.voucher{
    background-color: #e2e2e2;
    height: 130rpx;
    border-radius: 30rpx;
    border: 4rpx solid transparent;
    border-radius: 16px;
    background-clip: padding-box, border-box;
    background-origin: padding-box, border-box;
   color: #fff;
    display: flex;
    flex-direction: row;
    overflow: hidden;
    margin-top: 10rpx;
}
.voucher_overall{
    position: relative;
    background-color: #e2e2e2;
    height: 130rpx;
    border-radius: 10rpx;
    border: 4rpx solid transparent;
    background-clip: padding-box, border-box;
    background-origin: padding-box, border-box;
    color: #fff;
    display: flex;
    flex-direction: row;
    overflow: hidden;
    margin-top: 10rpx;
}
.voucher_overall::before{
    position: absolute;
    width: 60rpx;
    border-radius: 0 30rpx 30rpx 0;
    content: '';
    background-color: red;
    z-index: 2;
    left: 0;
}
.active_voucher{
    background-image: linear-gradient(to right, #222, #222), linear-gradient(90deg, #efcd71,#efcf77,#e4c675,#efcd71);
}
.voucher_left{
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    background-color: #8878f5;
    width: 25%;
}
.voucher_left:first-child {
    color: #fff;
    font-weight: 600;
}
.voucher_left:last-child{
    color: #fff;
}
.voucher_right{
    background-color: #f1f1f1;
    width: 75%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    color: #000;
    padding-left: 30rpx;
}
.pay_list{
    padding: 20rpx;
    background-color: #262626;
    margin: 30rpx;
    border-radius: 20rpx;
}
.pay_item{
    background-color: #e2e2e2;
    border-radius: 20rpx;
    height: 80rpx;
    line-height: 80rpx;
    padding-left: 50rpx;
    margin-top:50rpx;
}
.submit_order {
  width: 100%;
  height: 100rpx;
  bottom: 0;
  position: fixed;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  background-color: #fff;
  color: #000;
  border-top: 2rpx solid #fff9c8;
}

.submit_order>view:first-of-type>text:first-of-type {
  font-weight: bold;
}

.submit_order>view:first-of-type>text:last-of-type {
    color: #8878f5;
    font-weight: 600;
}

.submit_order>view:last-of-type {
  height: 100%;
  width: 30%;
  margin-left: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #8878f5;
  color: #fff;
}