                    <view class="hospital_item" wx:for="{{selectCityHospital}}" wx:key="index">
                        <view data-item="{{item}}" bindtap="selectHospital" data-name="{{item.name}}" data-hospitalid="{{item.id}}" data-money="{{item.hospitalSalePrice}}">
                            <view class="hospital_top">
                                <van-image width="50" height="50" src="{{item.thumbPicUrl}}" />
                                <view class="hospital_title_con">
                                    <view class="hospital_title">{{item.name}}</view>
                                </view>
                            </view>
                            <view class="address_con">
                                <view class="address" data-item="{{item}}">地址：{{item.address}}</view>                               
                            </view>
                        </view>
                    </view>
                    <van-divider wx:if="{{!selectCityHospital.length}}" contentPosition="center" customStyle="font-size: 28rpx;padding:0 150%;width:100%">暂无医院</van-divider>

                </view>
