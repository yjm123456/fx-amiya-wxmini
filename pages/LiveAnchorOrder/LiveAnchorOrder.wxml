<!--pages/LiveAnchorDetail/LiveAnchorOrder/LiveAnchorOrder.wxml-->
<view>
    <view class="card_info"><image src="{{shopGoodsInfo.thumbPicUrl}}"></image><view class="info_warp">
        <view class="goods_name"><text>{{shopGoodsInfo.name}}</text></view>
        <view class="goods_info"><text>数量:1张</text><text class="price">¥{{shopGoodsInfo.salePrice}}</text></view>
    </view></view>
    <view class="order_form">
        <view>
            <van-field border="{{false}}" input-class="field" value="{{ trueName  }}" type="textarea" clearable placeholder="请输入姓名" title-width="4em" bind:change="handleNameChange" maxlength="200" />
            <van-field border="{{false}}" input-class="field" value="{{ phone  }}" type="textarea" clearable placeholder="请输入手机号" title-width="4em" bind:change="handlePhoneChange" maxlength="200" />
            <van-field wx:if="{{type=='mf'}}" border="{{false}}" disabled input-class="field" value="{{ appointmentCity  }}" type="textarea" clearable placeholder="请选择预约城市" title-width="4em" bindtap="switchCity" maxlength="200" />
            <van-field wx:if="{{type=='mf'&&appointmentHospital}}" border="{{false}}" disabled input-class="field" value="{{ appointmentHospital  }}" type="textarea" clearable placeholder="请选择预约医院" title-width="4em" bindtap="switchHospital" maxlength="200" />
            <van-field wx:if="{{type=='mf'}}" border="{{false}}" input-class="field" value="{{ appointmentDate  }}" type="textarea" clearable placeholder="请选择预约时间" title-width="4em" disabled bindtap="selectDate" maxlength="200" />
        </view>
        <view class="pay_list">
            <van-radio-group value="{{ name === 'dd' ? '1' : '2' }}" bind:change="onChange">
                <van-cell-group border="{{false}}">
                    <van-cell wx:if="{{name==='dd'}}" border="{{false}}" inset="{{true}}" title="刀刀老师" clickable data-names="1">
                        <van-radio checked-color="#8878f5" slot="right-icon" name="1" />
                    </van-cell>
                    <van-cell wx:if="{{name==='jn'}}" border="{{false}}" inset="{{true}}" title="吉娜老师" clickable data-names="2">
                        <van-radio checked-color="#8878f5" slot="right-icon" name="2" />
                    </van-cell>
                </van-cell-group>
            </van-radio-group>
        </view>
        <view>
            <button class="submit_btn" catch:tap="purchase">提交订单</button>
        </view>

        <view wx:if="{{type=='mf'}}" class="tip">
            <image src="https://ameiya.oss-cn-hangzhou.aliyuncs.com/f45a8df2131947a1884a2443f9abf37c.png" mode="widthFix"></image>
        </view>

        <view wx:else class="tip">
            <!-- <image src="https://ameiya.oss-cn-hangzhou.aliyuncs.com/60105e1a07c443b59951069b8dde1e09.png" mode="widthFix"></image> -->
            <text>使用说明</text>
            <text>1.支付完成后,客服人员最晚于24小时内与您联系,安排预约事项</text>
            <text>2.非实物</text>
            <text>3.不支持七天无理由</text>
            <text>4.正品保障</text>
            <text>5.官方咨询热线:400-900-1591</text>
        </view>

    </view>
    <van-calendar show="{{ display }}" bind:close="onClose" bind:confirm="onConfirm" />
    <!-- 切换城市弹窗 -->
    <van-popup show="{{ cityModel }}" position="right" bind:close="onCancel" custom-style="height: 100%;width:78%">
        <view class="popup_con">
            <view class="pro_content">
                <view class="popup_item">
                    <!-- 热门城市 -->
                    <view class="hot_con">
                        <view class="type_name">热门城市</view>
                        <view class="name_com">
                            <block wx:for="{{hosCityList}}" wx:key="index">
                                <view class="popup_text  {{item.id==currentId?'active':'popup_text'}}" bindtap="selectedCity" data-cityid='{{item.id}}' data-item="{{item.name}}" data-type="1">{{item.name}}</view>
                            </block>
                        </view>
                    </view>
                    <view class="hot_con">
                        <view class="cwkt">预约城市</view>
                    </view>

                    <view class="item_type">
                        <block wx:for="{{cityList}}" wx:key="index">
                            <view class="{{item.city.length !=0 ? 'items' : ''}}">
                                <view class="type_name" wx:if="{{item.city.length !=0}}">{{item.provinceName}}</view>
                                <view class="name_com">
                                    <block wx:for="{{item.city}}" wx:key="index" wx:for-item="i">
                                        <view class="popup_text {{i.id==currentIds?'actives':'popup_text'}}" data-item="{{i.name}}" data-type="2" bindtap="selectedCity">{{i.name}}</view>
                                    </block>
                                </view>
                            </view>
                        </block>
                    </view>
                </view>
            </view>
        </view>
    </van-popup>
</view>
<!-- 授权手机号 -->
<authPhone control="{{controlAuthPhone}}" bind:successBindPhone="successBindPhone" bind:cancelBindPhone="cancelBindPhone"></authPhone>
<auth control="{{controlAuth}}" bind:getUserInfoSuccess='getUserInfoSuccess' bind:cancelGetUserInfo="cancelGetUserInfo" />
<!-- 新客绑定提示弹窗 -->
<van-dialog showConfirmButton="{{false}}" show="{{show}}" use-slot id="bind_tips">
    <image class="tip_img" mode="widthFix" src="https://ameiya.oss-cn-hangzhou.aliyuncs.com/7cd41576dd504750a625f314b8ec3bc2.png"></image>
    <view class="submit" catchtap="getVoucher">立即领取</view>
</van-dialog>