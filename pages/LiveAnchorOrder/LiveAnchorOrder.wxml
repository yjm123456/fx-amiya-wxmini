            <van-field wx:if="{{type=='mf'}}" border="{{false}}" input-class="field" value="{{ appointmentDate  }}" type="textarea" clearable placeholder="请选择预约时间" title-width="4em" disabled bindtap="selectDate" maxlength="200" />
        </view>
        <view>
            <button class="submit_btn" catch:tap="purchase">提交订单</button>
        </view>
        <view wx:if="{{type=='mf'}}" class="tip">
            <image src="https://ameiya.oss-cn-hangzhou.aliyuncs.com/f45a8df2131947a1884a2443f9abf37c.png" mode="widthFix"></image>
        </view>

        <view wx:else class="tip">
            <image src="https://ameiya.oss-cn-hangzhou.aliyuncs.com/60105e1a07c443b59951069b8dde1e09.png" mode="widthFix"></image>
        </view>
    </view>
    <van-calendar show="{{ display }}" bind:close="onClose" bind:confirm="onConfirm" />
    <!-- 切换城市弹窗 -->
    <van-popup show="{{ cityModel }}" position="right" bind:close="onCancel" custom-style="height: 100%;width:78%">
        <view class="popup_con">
            <view class="pro_content">
                <view class="popup_item">
                    <!-- 热门城市 -->
                    <view class="hot_con">
                        <view class="type_name">热门城市</view>
                        <view class="name_com">
                            <block wx:for="{{hosCityList}}" wx:key="index">
                                <view class="popup_text  {{item.id==currentId?'active':'popup_text'}}" bindtap="selectedCity" data-cityid='{{item.id}}' data-item="{{item.name}}" data-type="1">{{item.name}}</view>
                            </block>
                        </view>
                    </view>
                    <view class="hot_con">
                        <view class="cwkt">预约城市</view>
                    </view>

                    <view class="item_type">
                        <block wx:for="{{cityList}}" wx:key="index">
                            <view class="{{item.city.length !=0 ? 'items' : ''}}">
                                <view class="type_name" wx:if="{{item.city.length !=0}}">{{item.provinceName}}</view>
                                <view class="name_com">
                                    <block wx:for="{{item.city}}" wx:key="index" wx:for-item="i">
                                        <view class="popup_text {{i.id==currentIds?'actives':'popup_text'}}" data-item="{{i.name}}" data-type="2" bindtap="selectedCity">{{i.name}}</view>
                                    </block>
                                </view>
                            </view>
                        </block>
                    </view>
                </view>
            </view>
        </view>
    </van-popup>
</view>