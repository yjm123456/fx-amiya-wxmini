    background-color: #D1CEC7;
    border-radius: 10rpx;
    font-size: 24rpx;
    text-align: center;
    margin-left: 76% ;
  }
  .diary_con{
    padding: 30rpx 30rpx 15rpx;
    box-sizing: border-box;
    background-color: #fff;
    margin: 20rpx 0;
  }
  .diary_like_con{
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  .diary_img{
    width: 100%;
    border-radius: 10rpx;
    margin: 10rpx 0;
    width: 100%;
    height: 400rpx;
  }
  .diary_title{
    font-size: 28rpx;
    font-weight: bold;
  }
  .diary_right{
    font-weight: bold;
    font-size: 30rpx;
    position: relative;
    bottom: 10rpx;
  }
  .diary_left{
    display: flex;
    align-items: center;
    font-size: 24rpx;
  }
  .dian{
    margin: 0 20rpx;
  }
  .hot_con{
    margin-bottom: 50rpx;
  }
  .local{
    color: #8878f5;
    font-weight: 600;
  }
