/* pages/appointmentHospital/appointment/appointment.wxss */
.container{
    margin: 30rpx;
    background-color: #313131;
    border-radius: 20rpx;
}
.select-city{
    color: #fff;
    padding: 20rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
}
.title{
    flex: 2;
    font-size: 30rpx;
}
.city{
    flex: 6;
    display: flex;
    font-size: 0.9em;
    justify-content: flex-end;
}
.current-city{
    display: flex;
    align-items: center;
}
.location_img{
    width: 1.5em;
    height: 1.5em;
}
.change-city{
    margin-left: 20rpx;
    display: flex;
    align-items: center;
    background-color: #262626;
    padding: 10rpx;
    border-radius: 10rpx;
}

.hospital-list{
    background-color: #262626;
    margin: 10rpx;
    padding: 20rpx;
    border-radius: 20rpx;
    display: flex;
    flex-direction: column;
    color: #fff;
    font-size: 28rpx;
}
.hospital-item{
    display: flex;
    flex-direction: row;
}
.item-img{
    width: 120rpx;
    height: 120rpx;
    border-radius: 20rpx;
    overflow: hidden;
}
.item-img>image{
    width: 100%;
    height: 100%;
}
.item-info{
    margin-left: 20rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}
.item-info>text{
    text-overflow: ellipsis;
}

