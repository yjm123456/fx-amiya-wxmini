<!--pages/AddConsumptionCredential/AddConsumptionCredential.wxml-->
<view class="content">
    <view class="name">
        <view class="lable">会员姓名:</view>
        <van-field value="{{ customerName }}" custom-class="name" placeholder="请输入会员姓名" border="{{ false }}" bind:change="onNameChange" />
    </view>
    <view class="name">
        <view class="lable">到院实际手机号码:</view>
        <van-field value="{{ toHospitalPhone }}" placeholder="请输入手机号" border="{{ false }}" bind:change="onPhoneChange" />
    </view>
    <view class="name">
        <view class="lable">治疗时间:</view>
        <van-field value="{{ consumeDate }}" placeholder="请输入治疗时间" border="{{ false }}" bind:tap="selectDate" />
    </view>
    <view class="name h">
        <view class="lable">支付凭证</view>
        <van-uploader class="img" max-count="1" accept="image" preview-size="120rpx"  bind:delete="delete1" deletable="{{ true }}" file-list="{{ fileList }}" bind:after-read="afterRead1" />
        <van-uploader class="img2" max-count="1" accept="image" preview-size="120rpx" bind:delete="delete2" deletable="{{ true }}" file-list="{{ fileList2 }}" bind:after-read="afterRead2" />
        <van-uploader class="img3" max-count="1" accept="image" preview-size="120rpx"  bind:delete="delete3" deletable="{{ true }}" file-list="{{ fileList3 }}" bind:after-read="afterRead3" />
        <van-uploader class="img4" max-count="1" accept="image" preview-size="120rpx" bind:delete="delete4" deletable="{{ true }}" file-list="{{ fileList4 }}" bind:after-read="afterRead4" />
        <van-uploader class="img5" max-count="1" accept="image" preview-size="120rpx"  bind:delete="delete5" deletable="{{ true }}" file-list="{{ fileList5 }}" bind:after-read="afterRead5" />
    </view>
    <view class="submit" catchtap="authorizeNotice">提交</view>
</view>
<van-calendar color="#8878f5" show="{{ display }}" min-date="{{minDate}}" default-date="{{currentDate}}" bind:close="onClose" bind:confirm="onConfirm" />
