page{
  background-color: #fff;
}
.content{
  position: relative;
  
}
.img{
  width: 100%;
  height: 250rpx;
}
.head_portrait_con{
  width: 200rpx;
  height: 200rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #fff;
  margin: -15% auto 0;
  border-radius: 50%;
}
.head_portrait{
  width:180rpx;
  height:180rpx;
  border-radius: 50%;
}
.user_message{
  margin-top: 50rpx;
}
.item{
  width: 70%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 60rpx auto 0;
  border-bottom: 1rpx solid #000;
  padding-bottom: 20rpx;
  box-sizing: border-box;
}
.item_left{
  display: flex;
  align-items: center;
}
.item_icon{
  background-color: #D1cec7;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  text-align: center;
  line-height: 80rpx;
  margin-right: 20rpx;
}
.selected_project{
  color: #D1cec7;
  font-size:30rpx
}
.select_button{
  padding: 10rpx 18rpx;
  box-sizing: border-box;
  border-radius: 10rpx;
  background-color: #000;
  color: #fff;
  font-size: 24rpx;
}
.cancel,.submite{
  padding: 6rpx 30rpx;
  box-sizing: border-box;
  border-radius: 10rpx;
  color: #fff;
  margin: 0 10rpx;
  font-size: 26rpx;
 }
 .cancel{
   background-color: #ccc;
 }
 .submite{
   background-color: #ff1554;
 }
 .popup_con{
  padding: 20rpx;
  box-sizing: border-box;
  position: relative;
}
 .name_com{
  display: flex;
  flex-wrap: wrap;
}
.type_name{
  margin: 10rpx 0;
  font-weight: bold;
  font-size: 28rpx;
  padding-bottom: 20rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid #ccc;
}
.items{
  margin-bottom: 50rpx;
}
.item_type{
  margin-top: 20rpx;
}
 .popup_text{
  font-size: 26rpx;
  padding: 4rpx 30rpx;
  box-sizing:border-box;
  border:1rpx solid #ccc;
  margin-right: 20rpx;
  margin-top: 20rpx;
  border-radius: 6rpx;
  color: #333;

}
.buttons{
  margin-top: 60rpx;
  width: 100%;
  height: 80rpx;
  text-align: end;
  line-height: 80rpx;

}
._on,.active {
  color: #ff1554;
  border: 1rpx solid #ff1554;
}
.select_text{
  color: #000;
  font-size:30rpx
}
.button_submit{
  width: 70%;
  height: 100rpx;
  line-height: 100rpx;
  border-radius: 50rpx;
  text-align: center;
  color: #fff;
  background-color: #393939;
  margin: 60rpx auto 0;
  font-size: 36rpx;
}
