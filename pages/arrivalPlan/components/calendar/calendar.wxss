/* 图标 */
.iconfont {
  font-family: "iconfont" !important;
  font-size: 16px;
  font-style: normal;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

.icon-left1:before {
  content: "\e60b";
}

.icon-left2:before {
  content: "\e60c";
}

.icon-d-right:before {
  content: "\e61a";
}

.icon-d-left:before {
  content: "\e61c";
}

.icon-fasfa-banCopy:before {
  content: "\e609";
}

.calendar {
  color: #fff;
  text-align: center;
  font-size: 30rpx;
  box-sizing: border-box;
  margin: 25rpx 20rpx;
  padding: 10rpx 0 10rpx 0;
  background-color: #262626;
  border-radius: 10rpx;
}

/* 标题 */

.calendar_title {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.calendar_title>view {
  display: flex;
  align-items: center;
}

.calendar_title>view:first-child>text:first-child {
  display: inline-block;
  padding: 30rpx;
}

.calendar_title>view:first-child>text:last-child {
  display: inline-block;
  padding: 30rpx;
}

.calendar_title>view:nth-child(2) {
  font-size: 32rpx;
}

.calendar_title>view:last-child>text:first-child {
  display: inline-block;
  padding: 30rpx;
}

.calendar_title>view:last-child>text:last-child {
  display: inline-block;
  padding: 30rpx;
}

.calendar_title .iconfont {
  font-size: 18rpx;
  color: #666666;
  font-weight: bold;
}

/* 星期 */

.calendar_week {
  display: flex;
  text-align: center;
  padding: 40rpx 10rpx 30rpx 10rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid #e0e0e0;
}

.calendar_week .item {
  flex: 1;
}

/* 日期 */

.calendar_container {
  display: flex;
  flex-wrap: wrap;
  padding: 20rpx 10rpx;
  font-size: 28rpx;
}

.calendar_container .grid {
  display: inline-block;
  width: 14.28571428571429%;
  height: 90rpx;
  line-height: 70rpx;
  position: relative;
  z-index: 1;
}

.calendar_container .grid .self {
  position: absolute;
  top: 0rpx;
  right: 0rpx;
  width: 15rpx;
  height: 15rpx;
  border-radius: 50%;
  background: #ff1554;
  border: 3rpx solid #fff;
}

/* 上月 下月格子颜色 */
.calendar_container .grid.gray {
  color: #ccc;
}

.calendar_container .grid .select {
  background: #ff1554;
  border-radius: 10rpx;
  color: #fff;
  width: 80%;
  margin: 0 auto;
}

/* 满 图标*/
.reserve_full_icon,
.current_Date_Before_Date_disable {
  position: absolute;
  width: 100%;
  height: 100%;
  font-size: 50rpx;
  color: #E5E5E5;
}

/* 满 字体*/
.reserve_full__text {
  position: absolute;
  width: 100%;
  height: 100%;
  font-size: 25rpx;
  top: 40rpx;
}