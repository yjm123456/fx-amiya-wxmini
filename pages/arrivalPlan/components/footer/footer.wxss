.wrap {
  margin: 0 25rpx;
  background-color: #262626;
  border-radius: 20rpx;
  padding: 30rpx;
  color: #fff;
}

.wrap>view {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 0;
  font-size: 28rpx;
}

.morning {
  
  background-color: #313131;
  border-radius: 20rpx;
  padding: 20rpx !important;
}
.afternoon{
  margin-top: 20rpx;
  background-color: #313131;
  border-radius: 20rpx;
  padding: 20rpx !important;
}
/* 日期 */
.morning>view:first-child>text:first-child,
.afternoon>view:first-child>text:first-child {
  margin-right: 20rpx;
}

/* 星期 */
.morning>view:first-child>text:nth-child(2),
.afternoon>view:first-child>text:nth-child(2) {
  margin-right: 20rpx;
}

/* 按钮 */
.morning>view:last-child,
.afternoon>view:last-child {
  background-color: #262626;
  padding: 10rpx 30rpx;
  border-radius: 10rpx;
  /* color: #fff; */
}