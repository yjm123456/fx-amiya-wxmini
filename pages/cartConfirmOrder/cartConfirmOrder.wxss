/* pages/cartConfirmOrder/cartConfirmOrder.wxss */
page{
    height: 100%;
    background-color: #f1f1f1;
}
.container {
    padding: 30rpx;
    background-color: #f1f1f1;
    padding-bottom: 120rpx;
}

.address {
    background-color: #fff;
    padding: 20rpx 30rpx;
    border-radius: 20rpx;
}

.select_address {
    display: flex;
    align-items: center;
    justify-content: space-between;
    color: #000;
}
.place{
    color: #000 !important;
}
.select_address>view:first-of-type {
    display: flex;
    align-items: center;
}

.select_address>view:first-of-type>text:first-of-type {
    font-size: 60rpx;
    color: #3388FF;
}

.select_address>view:first-of-type>text:last-of-type {
    color: #000;
    padding-left: 10rpx;
}

.select_address>view:last-of-type text {
    font-size: 40rpx;
}

.address_info {
    display: flex;
    align-items: center;
}

.address_info .icon {
    color: #000;
    font-size: 28rpx;
}

.address_info .text {
    flex: 1;
    padding-left: 20rpx;
    color: #000;
}

.address_info .text>view:first-of-type {
    font-size: 30rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
    font-weight: bold;
}

.address_info .text>view:last-of-type {
    font-size: 28rpx;
    color: #000;
    padding-top: 10rpx;
}

.product_item {
    display: flex;
    margin-top: 30rpx;
    align-items: center;
    padding: 20rpx;
    border-radius: 20rpx;
    background-color: #fff;
    /* box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.2); */
}
.product_img{
    width: 200rpx;
    height: 200rpx;
}
.product_img image {
    width: 200rpx;
    height: 200rpx;
    border-radius: 20rpx;
}

.dec {
    width: 100%;
    color: #000;
    height: 200rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    margin-left: 30rpx;
}
.dec text{
    font-size: 28rpx;
}
.tip {
    display: -webkit-box;
    word-break: break-all;
    text-overflow: ellipsis;
    padding-right: 10px;
    overflow: hidden;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
}

.pri_num {
    display: flex;
    justify-content: space-between;
}
.pri_num>text:first-of-type{
    color: #8878f5;
    font-size: 28rpx;
    font-weight: 600;
}
.price{
    color: #8878f5;
}

.submit_order {
    width: 100%;
    height: 100rpx;
    bottom: 0;
    position: fixed;
    display: flex;
    align-items: center;
    justify-content: flex-end;
    background-color: #fff;
    color: #000;
    border-top: 1rpx solid #e2e2e2;
}

.money {
    color: #8878f5;
    font-size: 32rpx;
    font-weight: 600;
}

.point {
    color: #8878f5;
    font-size: 32rpx;
    font-weight: 600;
    margin-left: 20rpx;
}

.submit_order>view:last-of-type {
    height: 100%;
    width: 30%;
    margin-left: 20rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #8878f5;
    color: #fff;
}
.remark{
    /* box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.2); */
    background-color: #fff;
    margin-top: 20rpx;
    border-radius: 20rpx;
    padding: 20rpx;
}
.mark{
    background-color: #f1f1f1;
    border-radius: 20rpx;
    margin-top: 20rpx;
}
.field{
    background-color: #f1f1f1 !important;
    color: #000 !important;
}
.label{
    font-size: 30rpx;
    color: #000;
}
.van-cell{
    background-color: #f1f1f1 !important;
    border-radius: 20rpx !important;
    color: #000;
}

.voucher-list{
    border-radius: 30rpx;
    padding: 30rpx;
    background-color: #313131;
    margin-top: 20rpx;
    /* margin: 30rpx 30rpx; */
}
.overall_voucher{
    
}
.voucher-title{
    font-size: 28rpx;
    margin-bottom: 10rpx;
    color: #fff;
}
.voucher{
    background-color: #e2e2e2;
    height: 130rpx;
    border-radius: 30rpx;
    border: 4rpx solid transparent;
    border-radius: 16px;
    background-clip: padding-box, border-box;
    background-origin: padding-box, border-box;
    background-image: linear-gradient(to right, #222, #222), linear-gradient(90deg, #efcd71,#efcf77,#e4c675,#efcd71);
    display: flex;
    flex-direction: row;
    overflow: hidden;
    margin-top: 10rpx;
}
.voucher_overall{
    background-color: #e2e2e2;
    height: 130rpx;
    border-radius: 30rpx;
    border: 4rpx solid transparent;
    border-radius: 16px;
    background-clip: padding-box, border-box;
    background-origin: padding-box, border-box;
    background-image: linear-gradient(to right, #222, #222), linear-gradient(90deg, #e2e2e2,#e2e2e2,#e2e2e2,#e2e2e2);
    display: flex;
    flex-direction: row;
    overflow: hidden;
    margin-top: 10rpx;
}
.active_voucher{
    background-image: linear-gradient(to right, #222, #222), linear-gradient(90deg, #efcd71,#efcf77,#e4c675,#efcd71);
}
.voucher_left{
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    background-color: #262626;
    width: 25%;
}
.voucher_left:first-child {
    background-image: -webkit-linear-gradient(right, #efcd71, #fff9c8, #efcf77, #fff9c8, #e4c675, #fff9c8);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    font-weight: 600;
}
.voucher_left:last-child{
    color: #fff;
}
.voucher_right{
    background-color: #313131;
    width: 75%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    color: #fff;
    padding-left: 30rpx;
}
.sum_amount{
    display: flex;
}
.amount{
    display: flex;
    flex-direction: column;
}
