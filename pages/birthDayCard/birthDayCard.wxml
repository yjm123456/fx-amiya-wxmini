<!--pages/birthDayCard/birthDayCard.wxml-->
<scroll-view scroll-y="{{true}}" style="width:100%;height:{{sysheight}}px;">
    <view class="content">
        <image class="img" mode="widthFix" src="https://ameiya.oss-cn-hangzhou.aliyuncs.com/7d554a429e1341698d3749b19e8bacbe.jpg"></image>
        <view class="name">
            <van-field custom-style='width:100%;height:60rpx;line-height:60rpx;display:flex;justify-content:center;align-items:center;background-color:transparent;font-size:28rpx;'	  value="{{ name }}"  border="{{ false }}" bind:change="onNameChange" />
        </view>
        <view class="birthday">
            <van-field custom-style='width:100%;height:60rpx;line-height:60rpx;display:flex;justify-content:center;align-items:center;background-color:transparent;font-size:28rpx;' value="{{ birthDay }}"  border="{{ false }}" bind:change="onBirthDayChange" />
        </view>
        <view class="phone">
            <van-field custom-style='width:100%;height:60rpx;line-height:60rpx;display:flex;justify-content:center;align-items:center;background-color:transparent;font-size:28rpx;' value="{{ phone }}"  border="{{ false }}" bind:change="onPhoneChange" />
        </view>
        <view class="area">
            <van-field value="{{ city }}" custom-style='width:100%;height:60rpx;line-height:60rpx;display:flex;justify-content:center;align-items:center;background-color:transparent;font-size:28rpx;'  border="{{ false }}" bind:change="onAreaChange" />
        </view>
        <view class="detail_address">
            <van-field custom-style='width:100%;height:60rpx;line-height:60rpx;display:flex;justify-content:center;align-items:center;background-color:transparent;font-size:28rpx;' value="{{ detailAddress }}"  border="{{ false }}" bind:change="onDetailAdressChange" />
        </view>
        <view class="submit">提交</view>
    </view>
</scroll-view>