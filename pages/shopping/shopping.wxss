}

.banner {
    width: 100%;
    height: 100%;
}

.banner image {
    width: 100%;
}

.integral_goods {
    margin-top: 20rpx;
    background-color: #262626;
  border-radius: 20rpx;
}

.title {
    padding: 10rpx 10rpx 10rpx;
    font-size: 38rpx;
    font-weight: bold;
    color: #ffffff;
}

.goods_wrap {
    width: 710rpx;
    position: absolute;
    top: 200rpx;
    bottom: 0;
    box-sizing: border-box;
    display: flex;
    flex-direction: row;
    background-color: #000000;
    padding: 20rpx;
}

/* 分类 */
.menu_wrap {
    width: 177rpx;
    height: 100%;
    background-color: #262626;
    border-radius: 20rpx;
    padding-top: 20rpx;
    padding-left: 10rpx;
}

.menu_item {
    height: 118rpx;
    display: flex;
    align-items: center;
    justify-content: center;

    font-size: 28rpx;
    color: #919090;
}

.menu_item text {
    display: -webkit-box; 
    word-break: break-all;
    text-overflow: ellipsis; 
    overflow: hidden; 
    -webkit-box-orient: vertical; 
    -webkit-line-clamp: 1;
}

.menu_item:last-child {
    border-bottom: 0;
}


.category_active {
    color: #DEC350;
    background-color: #000;
    border-radius: 30rpx 0rpx 0rpx 30rpx;
}
.category_active>text{
    font-weight: 600;
    /* color: #DEC350; */
    background-image:-webkit-linear-gradient(right,#e7cdc4, #fffaf3,#eacdbe,#fbeee5,#e4cfbb) !important; 
    -webkit-background-clip:text !important; 
    -webkit-text-fill-color:transparent !important;
}
/* 商品信息 */

.goods_info {
    flex: 1;
    margin-left: 27rpx;
}

.goods_info view:nth-child(1) {
    padding-top: 0;
}

.goods_info view:last-child {
    border-bottom: 0;
}

.goods_item {
    display: flex;
    flex-direction: row;
    background-color: #262626;
    margin-bottom: 20rpx;
    border-radius: 20rpx;
    overflow: hidden;
    height: 240rpx;
    position: relative;
}
.tag{
    position: absolute;
    padding: 10rpx;
    font-size: 22rpx;
    background:-webkit-linear-gradient(right ,#efcd71,#efcf77) !important; 
    color: #fff;
    right: 0;
    border-bottom-left-radius: 20rpx;
}
/* 图片 */


.goods_img{
    width: 240rpx;
    height: 240rpx;
    border-radius: 20rpx;
}

