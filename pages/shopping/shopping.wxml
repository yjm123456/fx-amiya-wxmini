<view class="wrap">
    <view class="integral_info">
        <view class="img">
            <image class="integral_img" src="../../images/integral.jpg"></image>
        </view>
        <view class="integral">
            <view class="integral_value big"><text class="middle">可用积分</text><text catchtap="toInternal" class="big strong color">{{balance}}</text></view>
            <view class="integral_rule middle" bindtap="handleRuleTap"><text>积分规则</text></view>
        </view>
    </view>
    <view class="integral_receive">
        <image mode="widthFix" class="to_shop" src="https://ameiya.oss-cn-hangzhou.aliyuncs.com/8e0041207b4d4086a8fd8ea8b5078a0d.JPG" bindtap="handleToShop"></image>
    </view>
