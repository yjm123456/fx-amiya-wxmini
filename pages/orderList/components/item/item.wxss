.warp {
    padding: 20rpx;
}

.item {
    background-color: #fff;
    border-radius: 20rpx;
    box-shadow: 2rpx 2rpx 5rpx 5rpx #e2e2e2;
    overflow: hidden;
    margin-bottom: 20rpx;
}

.header {
    padding: 20rpx 30rpx;
    display: flex;
    flex-direction: row-reverse;
    justify-content: space-between;
}

.order_state {
    color: #F13E53;
    font-size: 25rpx;
}

.header .order_id {
    font-size: 30rpx;
}

.header .order_id>text:last-of-type {
    color: #999999;
}

.content {
    flex: 1;
    padding: 20rpx 20rpx;
    display: flex;
}

.content .thumbPic {
    width: 200rpx;
    height: 200rpx;
}

.content .info {
    flex: 1;
    padding-left: 10rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.content .info .name {
    width: 100%;
    font-weight: bold;
    font-size: 28rpx;
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
}

.g_name {
    width: 240rpx;
    overflow: hidden;
    /* 内容末尾追加省略号。 */
    text-overflow: ellipsis;
    /* 使用自适应布局方式显示 */
    display: -webkit-box;
    /* 限定最多 2 行 */
    -webkit-line-clamp: 3;
    /* 垂直方向超出隐藏 */
    -webkit-box-orient: vertical;
}

.content .info .standard {
    font-size: 25rpx;
    color: #333333;
}

.content .info .price {
    width: 100%;
    bottom: 0;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.content .info .price>text:first-of-type {
    color: #EE0A24;
}

.content .info .price>text:last-of-type {
    color: #333333;
    font-size: 28rpx;
}

.footer {
    padding: 20rpx 30rpx;
    background-color: #fff;
    text-align: right;
    display: flex;
    justify-content: space-between;
}

.footer>text:first-of-type {
    color: #333333;
}

.footer>text:last-of-type {
    color: #EE0A24;
}

.tool {
    padding: 20rpx 30rpx;
    background-color: #fff;
    text-align: right;
    margin-top: 1rpx;
    display: flex;
    justify-content: flex-end;
    align-items: center;
}

.tool .order_source {
    font-size: 28rpx;
}

.source {
    font-size: 28rpx;
}

.tool .cancel {
    margin-right: 10rpx;
}

.pointReundClass {
    display: flex;
    align-items: center;
    padding: 0 20rpx;
    box-sizing: border-box;
    margin: 10rpx 0;
    font-size: 24rpx;
}

.confrim {
    text-align: center;
    font-size: 30rpx;
    padding: 10rpx 0;
    box-sizing: border-box;
}

.order_detail {
    display: flex;
    justify-content: flex-end;
    padding-right: 30rpx;
}

.button_both {
    display: flex;
    justify-content: space-around;
    padding: 30rpx 0;
    box-sizing: border-box;
    font-size: 30rpx;
}

.cancel_but,
.confrim_but {
    width: 50%;
    text-align: center;
}

.confrim_but {
    color: #CC3434
}