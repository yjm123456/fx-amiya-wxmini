    <!-- 活动 -->
    <view class="activity">
        <view class="activity_item">
            <image src="https://ameiya.oss-cn-hangzhou.aliyuncs.com/38c06f303d1041e68c2054d2dba031f2.jpg" bindtap="handleActivity1" data-activity="{{1}}" mode="heightFix"></image>
        </view>
        <view class="activity_item">
            <image src="https://ameiya.oss-cn-hangzhou.aliyuncs.com/7ad13c8c52ba4b98bbdf2ce2b7aaeea9.jpg" bindtap="handleActivity" data-activity="{{2}}" mode="aspectFill"></image>
        </view>
    </view>
    <!-- 导航栏二 -->
    <view class="navigation_list">
        <view class="grid_item" data-url="/pages/meiYaCard/meiYaCard" bindtap="to"><text>MEIYA卡</text></view>
        <view class="grid_item" data-url="/pages/shoppingMall/shoppingMall" bindtap="toShop"><text>MEIYA甄选</text></view>
        <view class="grid_item" data-url="/pages/beautyDiary/beautyDiary" bindtap="to"><text>美学分享</text></view>
    </view>

    <!-- 商品列表 -->
    <view class="product_list">
        <view class="h3 title">猜你喜欢</view>
        <view class="product_warp">
            <view class="product" wx:for="{{goodsList}}" bindtap="goodsDetails" data-goodsid="{{item.id}}" wx:key="index">
                <view wx:if="{{item.isMember}}" class="tag">会员专享</view>
                <view>
                    <view class="product_top">
                        <image src="{{item.thumbPicUrl}}" mode="widthFix"></image>
                    </view>
                    <view class="product_bottom">
                        <view class="product_name">{{item.name}}</view>
                        <view class="price">
                            <text class="present_price">¥{{item.minShowPrice}}</text>
                            <text class="original_price">¥{{item.maxShowPrice}}</text>
                        </view>
                    </view>
                </view>
            </view>
        </view>
    </view>
</view>
<!-- 授权手机号 -->
<authPhone control="{{controlAuthPhone}}" bind:successBindPhone="successBindPhone" bind:cancelBindPhone="cancelBindPhone"></authPhone>
<!-- 分享弹窗 -->
<van-dialog custom-class="van_dialog_action" use-slot id="van-dialog">
    <view class="share">
        <view class="share_by">{{nickname}}分享给您一张抵用券:</view>
        <view class="content">
            <view class="item_left">
                <text class="money">¥{{vouchermoney}}</text>
                <text class="type">抵用券</text>
            </view>
            <view class="item_right">
                <view class="item_name">{{vouchername}}</view>
            </view>
        </view>
    </view>
</van-dialog>
<!-- 领取抵用券弹窗 -->
<van-dialog custom-class="van_dialog_action" use-slot id="recieve-voucher">
    <view class="member_benefits">
        <view class="benefits_content">
            <view class="item_name">本月会员福利已到账</view>
        </view>
    </view>
</van-dialog>

<!-- 新客绑定提示弹窗 -->
<van-dialog use-slot id="bind_tips">
    <image class="tip_img" mode="widthFix" src="https://ameiya.oss-cn-hangzhou.aliyuncs.com/a29f756b262946c8ad44ba554cdb6d37.png"></image>
</van-dialog>