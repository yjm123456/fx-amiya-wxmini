<!--pages/AddConsumptionCredential/AddConsumptionCredential.wxml-->
<view class="content">
    <view class="name">
        <view class="lable">姓名:</view>
        <van-field value="{{ value }}" custom-class="name" placeholder="请输入姓名" border="{{ false }}" bind:change="onNameChange" />
    </view>
    <view class="name">
        <view class="lable">到院实际手机号码:</view>
        <van-field value="{{ value }}" placeholder="请输入手机号" border="{{ false }}" bind:change="onPhoneChange" />
    </view>
    <view class="name">
        <view class="lable">达人推荐</view>
        <view class="radio1">
            <van-radio-group value="{{ radio }}" bind:change="onRecommendChange">
                <van-radio checked-color="#dec530"  name="1">刀刀</van-radio>
                <view style="margin: 20rpx;"></view>
                <van-radio checked-color="#dec530" name="2">吉娜</van-radio>
            </van-radio-group>
        </view>
    </view>
    <view class="name">
        <view class="lable">消费实际时间:</view>
        <van-field  border="{{false}}" input-class="field" value="{{ consumeDate  }}" type="textarea" clearable placeholder="请选择预约时间" title-width="4em" disabled bindtap="selectDate" />
        <!-- <van-field value="{{ value }}" placeholder="请输入消费时间" border="{{ false }}" bind:change="onConsumptionDateChange" /> -->
    </view>
    <view class="name h">
        <view class="lable">支付凭证</view>
        <van-uploader class="img1" max-count="1" accept="image" preview-size="160rpx" deletable="{{ true }}" file-list="{{ fileList }}" bind:after-read="afterRead1" bind:delete="delete1" />
        <van-uploader class="img2" max-count="1" accept="image" preview-size="160rpx" deletable="{{ true }}" file-list="{{ fileList2}}" bind:after-read="afterRead2" bind:delete="delete2" />
    </view>
    <view class="submit" catchtap="CustomerConsumptionCredentials">提交</view>
</view>
<van-calendar show="{{ display }}" bind:close="onClose" bind:confirm="onConfirm" />
