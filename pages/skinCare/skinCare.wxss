/* pages/activity/activity.wxss */
page{
    background-color: #000;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100%;
}
.center{
    color:#fff;
    font-size: 38rpx;
    font-weight: 600
}
.img{
    width: 750rpx;
}
.btn{
    display: flex;
    flex-direction: row;
    justify-content: space-evenly;
    padding: 0rpx 30rpx;
}
.buy{
    width: 300rpx;
    height: 80rpx;
    border-radius: 20rpx;
    line-height: 80rpx;
    text-align: center;
    color: #fff;
    
    background:-webkit-linear-gradient(right ,#dec530,#e4c675) !important; 
}
.share_btn{
    width: 60rpx;
    padding: 10rpx;
    height: 60rpx;
    border-radius: 20rpx;
    text-align: center;
    color: #fff;
    border: 2rpx solid #dec530;
}
.share_btn>image{
    width: 100%;
    height: 100%;
}
