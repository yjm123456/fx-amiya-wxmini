/* text */
.exchange_tag{
    width: fit-content;
    color: #fff !important;
    background-color: #8878f5;
    padding: 3rpx 10rpx;
    border-radius: 15rpx;
    height: 25rpx;
    font-size: 25rpx !important;
    line-height: 25rpx;
}
.price{
    color: #8878f5;
    font-weight: 600;
    font-size: 30rpx;
}

.goods_item>view:last-child {
    flex: 1;
    margin-left: 25rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
}

.goods_item>view:last-child>view:nth-child(1),
.goods_item>view:last-child>view:nth-child(2) {
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    word-break: break-all;
    font-size: 25rpx;
}

.goods_item>view:last-child>view:nth-child(1) {
    color: #000;
    font-size: 28rpx;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    word-break: break-all;
}

.goods_item>view:last-child>view:nth-child(2) {
    color: #949494;
    font-size: 25rpx;
    margin-top: 10rpx;
}

.goods_item>view:last-child>view:nth-child(3) {
    margin-top: 10rpx;
    font-weight: 600;
    /* color: #DEC350; */
    color: #8878f5;
    font-size: 30rpx;
    font-weight: bold;
}
.goods_name{
    color: #000;
}