/* pages/subordinate/subordinate.wxss */
page {
    background-color: #000;
    height: 100%;
}
.list{
    display: flex;
    flex-direction: column;
    justify-content: center;
}
.item{
    border-radius: 20rpx;
    background-color: #262626;
    height: 150rpx;
    margin: 20rpx;
    overflow: hidden;
    display: flex;
    flex-direction: row;
    align-items: center;
    position: relative;
}
.portrait{
    width: 150rpx;
    height: 150rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}
.portrait image{
    width: 90%;
    height: 90%;
    border-radius: 20rpx;
}
.info{
    box-sizing: content-box;
    padding: 20rpx;
    height: 150rpx;
    color: #fff;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
}
.nick_name{
    font-weight: 600;
    font-size: 32rpx;
}
.register_date{
    font-size: 28rpx;
}
.icon{
    height: 50rpx;
    width: 50rpx; 
    position: absolute;
    right: 20rpx;
}
.icon image{
    width: 100%;
    height: 100%;
}
.no_content{
    position: absolute;
    margin: 50rpx auto;
}
