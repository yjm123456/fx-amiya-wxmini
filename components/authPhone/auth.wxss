.wrap {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  padding: 0 30rpx;
  box-sizing: border-box;
}

.wrap .company_info {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 50rpx 0;
  font-weight: bold;
  font-size: 30rpx;
}

.wrap .company_info .logo {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
}

.wrap .tip {
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 50rpx 0;
}

.wrap .tip text:first-of-type {
  margin-bottom: 20rpx;
  font-size: 30rpx;
  font-weight: bold;
}

.wrap .tip text:last-of-type {
  font-size: 30rpx;
  color: rgba(69, 90, 100, 0.6);
}

.wrap .auth {
  padding: 0 0 50rpx 0;
  display: flex;
}

.submit {
  width: 40%;
  height: 70rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  color: #fff;
  margin-bottom: 40rpx;
}

.dialog {
  text-align: center;
  padding: 20rpx 0;
}