.wrap {
  width: 100%;
}

.sku_pro {
  margin: 0 30rpx;
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f1f1f1;
}

.sku_pro .sku_pro_picture {
  width: 190rpx;
  height: 190rpx;
  border-radius: 8rpx;
}

.sku_pro .sku_pro_picture image {
  width: 190rpx;
  height: 190rpx;
  border-radius: 8rpx;
}

.sku_pro .sku_pro_info {
  margin-left: 15rpx;
  display: flex;
  flex-direction: column;
  flex: 1;
}

.sku_pro .sku_pro_info .price {
  display: flex;
  align-items: center;
}

.sku_pro .sku_pro_info .price>view:first-child {
  color: #8b4efc;
  font-size: 35rpx;
  margin-left: 15rpx;
  font-weight: bold;
}

.sku_pro .sku_pro_info .price>view:last-child {
  font-size: 25rpx;
  padding: 10rpx 15rpx;
  border-radius: 50rpx;
  background-color: rgba(139, 78, 252, 0.1);
  color: #8b4efc;
  margin-left: 20rpx;
}

.sku_pro .sku_pro_info .standard {
  font-size: 25rpx;
  margin-top: 15rpx;
  color: #979797;
}

.sku_pro .sku_pro_info .unit {
  font-size: 25rpx;
  margin-top: 15rpx;
  color: #979797;
}

/* 规格 */
.sku_info {
  margin: 0 30rpx;
  padding: 10rpx 0;
  display: flex;
  flex-direction: column;
  border-bottom: 1rpx solid #f1f1f1;
}

.sku_info .title {
  font-size: 28rpx;
  color: #000;
}

.sku_info .wrap {
  margin: 0 -10rpx;
  display: inline-block;
  font-size: 25rpx;
}
.stand{
    display: flex;
    flex-direction: row;
    padding: 15rpx;
    justify-content: space-between;
    background-color: #e2e2e2;
    border-radius: 10rpx;
    font-size: 32rpx;
    margin-top: 20rpx;
}
.active{
    background-color: #8b4efc;
}
.sku_info .wrap .item {
  background-color: rgba(139, 78, 252, 0.1);
  color: #8b4efc;
  padding: 15rpx;
  display: inline-block;
  border-radius: 8rpx;
  margin: 10rpx;
}

.current_a {
  background: rgb(139, 78, 252) !important;
  color: #fff !important;
}

/* 描述 */
.description {
  padding: 25rpx 30rpx;
  display: flex;
  flex-direction: column;
  border-bottom: 1rpx solid #f1f1f1;
}

.description>view {
  background-color: #f5f8fa;
  padding: 20rpx;
}

.description .title {
  font-size: 28rpx;
  color: #000;
}

.description .info {
  color: #8a8d8f;
  margin-top: 22rpx;
  line-height: 1.3;
  font-size: 25rpx;
}

/* 底部 */
.footer {
  display: flex;
  flex-direction: column;
  margin: 0 30rpx;
  padding: 15rpx 0 15rpx 0;
}

.footer .sku_quantity {
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.footer .sku_quantity>view:first-child {
  display: flex;
  align-items: center;
}

.footer .sku_quantity>view:first-child>text:last-child {
  margin-left: 10rpx;
}

.footer .sku_btns {
  width: 100%;
  margin-top: 30rpx;
  display: flex;
  align-items: center;
}

.footer .sku_btns>view {
  flex: 1;
}

.footer .sku_btns .gobuy {
  width: 100%;
  color: #fff;
  border-radius: 40rpx;
  background: linear-gradient(to right, #8b4efc, rgb(111, 59, 207));
}